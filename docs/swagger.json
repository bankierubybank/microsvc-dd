                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/tarots/": {
            "get": {
                "description": "Get all tarot cards",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "tarot"
                ],
                "summary": "Get all tarot cards",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
